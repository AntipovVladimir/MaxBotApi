<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net10.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Title>.NET Client for Max Bot API </Title>
        <Authors>Vladimir Antipov</Authors>
        <Description>.NET Client for Max Bot API
		Library used for developing bots for messenger MAX 
                https://dev.max.ru/docs-api
	</Description>
        <PackageProjectUrl>https://github.com/AntipovVladimir/MaxBotApi</PackageProjectUrl>
        <Version>1.0.5</Version>
	<PackageReadmeFile>README.md</PackageReadmeFile>
    </PropertyGroup>

    <ItemGroup>
      <Folder Include="Docs\" />
     <None Include="docs\README.md" Pack="true" PackagePath="\"/>
    </ItemGroup>

</Project>
